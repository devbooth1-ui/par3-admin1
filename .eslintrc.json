{
  "env": {
    "es2020": true,
    "node": true,
    "browser": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "semi": ["warn", "always"],
    "quotes": "off",
    "no-unused-vars": "warn"
  }
}
